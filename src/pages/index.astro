---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get latest events and meeting notes
const events = await getCollection('events');
const meetingNotes = await getCollection('meeting-notes');

// Sort and get the latest 3 events
const sortedEvents = events
  .sort((a, b) => new Date(a.data.date).getTime() - new Date(b.data.date).getTime())
  .slice(0, 3);

// Sort and get the latest 2 meeting notes
const sortedNotes = meetingNotes
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 2);
---

<Layout title="Welcome to MCL">
  <section class="hero">
    <div class="hero-content">
      <h1>Welcome to MCL</h1>
      <p class="subtitle">Discover the beauty of the natural world</p>
      <div class="cta-group">
        <a href="/about" class="cta-button primary">Explore More</a>
        <a href="/contact" class="cta-button secondary">Get in Touch</a>
      </div>
    </div>
  </section>

  <section class="features">
    <div class="section-header">
      <h2>Our Features</h2>
      <p class="section-description">Experience the perfect blend of nature and modern comfort</p>
    </div>
    <div class="feature-grid">
      <div class="feature-card">
        <div class="feature-icon">üåø</div>
        <h3>Natural Beauty</h3>
        <p>Immerse yourself in the serene beauty of nature's wonders.</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon">üè°</div>
        <h3>Peaceful Retreat</h3>
        <p>Find your perfect escape in our tranquil natural settings.</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon">‚ôªÔ∏è</div>
        <h3>Sustainable Living</h3>
        <p>Learn about living in harmony with nature.</p>
      </div>
    </div>
  </section>

  <section class="events">
    <div class="section-header">
      <h2>Upcoming Events</h2>
      <p class="section-description">Join us for these exciting nature experiences</p>
    </div>
    <div class="events-grid">
      {sortedEvents.map((event) => (
        <div class="event-card">
          <div class="event-date">
            <span class="date-day">{new Date(event.data.date).getDate()}</span>
            <span class="date-month">{new Date(event.data.date).toLocaleDateString('en-US', { month: 'short' })}</span>
          </div>
          <div class="event-content">
            <h3>{event.data.title}</h3>
            <p class="event-time">{event.data.time}</p>
            <p class="event-description">{event.data.description}</p>
            <a href="/events" class="event-link">Learn More</a>
          </div>
        </div>
      ))}
    </div>
    <div class="events-cta">
      <a href="/events" class="cta-button primary">View All Events</a>
    </div>
  </section>

  <section class="meeting-highlights">
    <div class="section-header">
      <h2>Recent Meeting Highlights</h2>
      <p class="section-description">Key takeaways from our latest gatherings</p>
    </div>
    <div class="highlights-grid">
      {sortedNotes.map((note) => (
        <div class="highlight-card">
          <div class="highlight-date">
            <span class="date-day">{new Date(note.data.date).getDate()}</span>
            <span class="date-month">{new Date(note.data.date).toLocaleDateString('en-US', { month: 'short' })}</span>
          </div>
          <div class="highlight-content">
            <h3>{note.data.title}</h3>
            <p class="highlight-description">
              {note.data.overview}
            </p>
            <a href="/meeting-notes" class="highlight-link">Read Full Notes</a>
          </div>
        </div>
      ))}
    </div>
    <div class="highlights-cta">
      <a href="/meeting-notes" class="cta-button primary">View All Meeting Notes</a>
    </div>
  </section>
</Layout>

<style>
  .hero {
    background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)),
                url('/images/nature-bg.jpg');
    background-size: cover;
    background-position: center;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: var(--color-white);
    padding: 2rem;
    position: relative;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, var(--color-primary), var(--color-secondary));
    opacity: 0.6;
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    animation: fadeInUp 1s ease-out;
  }

  .hero h1 {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    font-weight: 700;
    line-height: 1.2;
  }

  .subtitle {
    font-size: 1.5rem;
    margin-bottom: 2.5rem;
    opacity: 0.9;
  }

  .cta-group {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .cta-button {
    display: inline-block;
    padding: 1rem 2rem;
    border-radius: var(--radius-md);
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .cta-button.primary {
    background-color: var(--color-white);
    color: var(--color-primary);
  }

  .cta-button.secondary {
    background-color: transparent;
    color: var(--color-white);
    border: 2px solid var(--color-white);
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    color: var(--color-primary);
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .section-description {
    color: var(--color-text-light);
    font-size: 1.1rem;
  }

  .features {
    padding: 4rem 0;
    background-color: var(--color-white);
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .feature-card {
    background-color: var(--color-background);
    padding: 2.5rem;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
    text-align: center;
  }

  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-md);
  }

  .feature-icon {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
  }

  .feature-card h3 {
    color: var(--color-primary);
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  .events {
    padding: 4rem 0;
    background-color: var(--color-white);
  }

  .events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto 3rem;
    padding: 0 2rem;
  }

  .event-card {
    background-color: var(--color-background);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    overflow: hidden;
    transition: all 0.3s ease;
    display: flex;
  }

  .event-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-md);
  }

  .event-date {
    background-color: var(--color-primary);
    color: var(--color-white);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-width: 80px;
  }

  .date-day {
    font-size: 2rem;
    font-weight: 700;
    line-height: 1;
  }

  .date-month {
    font-size: 1rem;
    text-transform: uppercase;
    opacity: 0.9;
  }

  .event-content {
    padding: 1.5rem;
    flex: 1;
  }

  .event-content h3 {
    color: var(--color-primary);
    margin-bottom: 0.5rem;
    font-size: 1.3rem;
  }

  .event-time {
    color: var(--color-secondary);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .event-description {
    color: var(--color-text);
    margin-bottom: 1rem;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .event-link {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .event-link:hover {
    color: var(--color-secondary);
  }

  .events-cta {
    text-align: center;
    margin-top: 2rem;
  }

  .meeting-highlights {
    padding: 4rem 0;
    background-color: var(--color-background);
  }

  .highlights-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto 3rem;
    padding: 0 2rem;
  }

  .highlight-card {
    background-color: var(--color-white);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    overflow: hidden;
    transition: all 0.3s ease;
    display: flex;
  }

  .highlight-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-md);
  }

  .highlight-date {
    background-color: var(--color-secondary);
    color: var(--color-white);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-width: 80px;
  }

  .highlight-content {
    padding: 1.5rem;
    flex: 1;
  }

  .highlight-content h3 {
    color: var(--color-primary);
    margin-bottom: 0.5rem;
    font-size: 1.3rem;
  }

  .highlight-description {
    color: var(--color-text);
    margin-bottom: 1rem;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .highlight-link {
    color: var(--color-secondary);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .highlight-link:hover {
    color: var(--color-primary);
  }

  .highlights-cta {
    text-align: center;
    margin-top: 2rem;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1.2rem;
    }

    .cta-group {
      flex-direction: column;
    }

    .feature-grid {
      grid-template-columns: 1fr;
    }

    .event-card {
      flex-direction: column;
    }

    .event-date {
      flex-direction: row;
      gap: 1rem;
      padding: 1rem;
    }

    .date-day {
      font-size: 1.5rem;
    }

    .highlight-card {
      flex-direction: column;
    }

    .highlight-date {
      flex-direction: row;
      gap: 1rem;
      padding: 1rem;
    }
  }
</style>
